<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="@dimen/cardview_height_base">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.lsj.lsjnews.utils.CircleImageView
                    android:id="@+id/img_user_bbs_msg_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/img_user_bbs_msg_head"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_user_bbs_msg_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="科比"
                        android:textSize="@dimen/text_size_18" />

                    <TextView
                        android:id="@+id/txt_user_bbs_msg_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="2016-3-18 18:23"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_user_bbs_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="@dimen/text_size_22"
                android:text="春眠不觉晓，处处闻啼鸟。夜来风雨声，花落知多少。"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyle_user_bbs_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
