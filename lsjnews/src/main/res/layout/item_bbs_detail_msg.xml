<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <com.lsj.lsjnews.utils.CircleImageView
            android:id="@+id/img_user_bbs_detail_msg_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            app:border_color="#00ffffff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_user_bbs_detail_msg_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_user_bbs_detail_msg_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科比"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txt_user_bbs_detail_msg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="2016-3-18 18:23"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/txt_user_bbs_detail_msg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:textSize="@dimen/text_size_18"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="3dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>