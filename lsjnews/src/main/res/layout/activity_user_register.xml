<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="@color/loginViewColor"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edit_user_register_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:maxLength="11"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:inputType="number"
                android:textSize="@dimen/text_size_22"
                android:hint="手机号"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
                <EditText
                    android:id="@+id/edit_user_register_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/text_size_22"
                    android:hint="验证码"/>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_btn_get_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="1dp">
                    <TextView
                        android:id="@+id/txt_register_get_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/loginViewColor"
                        android:textSize="@dimen/text_size_18"
                        android:clickable="false"
                        android:text="获取验证码"/>
                    <ImageView
                        android:id="@+id/img_get_code_is_can_click"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:src="@mipmap/ic_cannot_login"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <EditText
                android:id="@+id/edit_user_register_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/text_size_22"
                android:hint="密码(最少6位)"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_btn_user_register"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/loginViewColor"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="false"
            android:textSize="@dimen/text_size_26"
            android:textColor="@color/colorPrimary"
            android:text="注册"/>
        <ImageView
            android:id="@+id/img_register_is_can_click"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:src="@mipmap/ic_cannot_login"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
