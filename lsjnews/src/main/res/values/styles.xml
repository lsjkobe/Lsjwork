<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyTabLayoutTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ToolBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/item_right_in</item>
        <item name="android:windowExitAnimation">@anim/item_right_out</item>
    </style>

    <style name="Theme.MyDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/sel_dialog_fill_box</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
